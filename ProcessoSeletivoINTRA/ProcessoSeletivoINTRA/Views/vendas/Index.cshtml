@model IEnumerable<ProcessoSeletivoINTRA.Models.venda>

@{
    ViewBag.Title = "Index";
}

<h2>Vendas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Valor
        </th>
        <th>
            Data da Venda
        </th>
        <th>
            Quantidade
        </th>
        <th>
            Produto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_venda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.produto1.nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_venda }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_venda }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_venda })
        </td>
    </tr>
}

</table>
