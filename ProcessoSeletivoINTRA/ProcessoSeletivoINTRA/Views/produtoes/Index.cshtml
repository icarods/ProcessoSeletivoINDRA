@model IEnumerable<ProcessoSeletivoINTRA.Models.produto>

@{
    ViewBag.Title = "Index";
}

<h2>Produtos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Descrição
        </th>
        <th>
            Estoque
        </th>
        <th>
            Data de Cadastro
        </th>
        <th>
            Preço
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estoque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.data_cadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preco)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_produto }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_produto }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_produto })
        </td>
    </tr>
}

</table>
